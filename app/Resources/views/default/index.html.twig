{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" id="app">
        <h1>Vision - board</h1>
        <div id="leaderboard">
            <h2>Leaderboard</h2>
            <ul class="list-group">
                <li v-for="person in leaderboard" class="list-group-item">
                    <p>Nom: ${ person.employee.employeeName }</p>
                    <p>Quantit√©: ${ person.total_amount }</p>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        Vue.config.delimiters = ['${', '}'];
        new Vue({
            el: '#app',
            data: {
                leaderboard: [],
            },
            ready: function() {
                this.realoadLeaderboard();
            },
            methods: {
                realoadLeaderboard: function() {
                    var self = this;
                    $.ajax('/vision/leaderboard', {
                        type: 'GET',
                        dataType: 'json'
                    }).success(function(data) {
                        self.$set('leaderboard', data);
                    });
                }
            }
        });
    </script>
{% endblock %}